<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax_info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    height: 3rem;
    padding: 1rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    margin-left: 3rem;
  }
  a{
    text-decoration: none;
    color: inherit;
  }

  @media only screen and (max-width: 600px) {
   .filter i {
    font-size: 1rem;
  }
  .filter p {
    font-size: 0.7rem;
  }
}
  
  @media only screen and (max-width:1400px) {
  .tax-toggle{
    display: none;
  }
    
  }
</style>
  

<div id="filters">
  <div class="filter">
    <a href="/category/trending">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/rooms">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/beach">
      <i class="fa-solid fa-water"></i>
      <p>Beach</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/mountain">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/iconic">
      <i class="fa-solid fa-city"></i>
      <p>Iconic</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/forest">
      <i class="fa-solid fa-tree"></i>
      <p>Forest</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/luxury">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Luxury</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/snow">
      <i class="fa-solid fa-snowflake"></i>
      <p>Snow</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/villas">
      <i class="fa-solid fa-campground"></i>
      <p>Villas</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/rooms"> <!-- Pet Friendly = rooms -->
      <i class="fa-solid fa-dog"></i>
      <p>Pet Friendly</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/rooms"> <!-- Hotels = rooms -->
      <i class="fa-solid fa-building"></i>
      <p>Hotels</p>
    </a>
  </div>

  <div class="filter">
    <a href="/category/desert">
      <i class="fa-solid fa-vihara"></i>
      <p>Desert</p>
    </a>
  </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch ">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display total after tax</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListing) { %>
    <a href="/listings/<%=listing._id%>" class="listlink">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing image"
          style="height: 19rem"
        />

        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="tax_info"> &nbsp;&nbsp;+18% GST</i>
          </p>

           
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch= document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
  let taxInfo=document.getElementsByClassName("tax_info");
  for(let info of taxInfo){
      if(info.style.display!="inline"){
        info.style.display="inline";
      }
      else{
        info.style.display="none";
      }
  }
  });
</script>
